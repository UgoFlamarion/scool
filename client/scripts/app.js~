Router.configure({
    layoutTemplate: 'mainFrame'
});

Router.map(function () {
    /**
     * The route's name is "home"
     * The route's template is also "home"
     * The default action will render the home template
     */
    this.route('home', {
	path: '/',
	template: 'welcomeView',
	load: function() {
	    if (!Meteor.user())
		this.redirect('login');
	}
    });

    this.route('login', {
	path: '/login',
	template: 'login'
    });

    /**
     * The route's name is "posts"
     * The route's path is "/posts"
     * The route's template is inferred to be "posts"
     */
    this.route('chatroom', {
	path: '/chatroom',
	template: 'mainBox'
    });

});